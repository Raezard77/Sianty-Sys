mixin formSlide()
    #form-body
        #form-outer-container
            .form-container.sign-up-container
                form(action="#")
                    h1 الاشتراك
                    input(type="text" placeholder="الاسم")
                    input(type="email" placeholder="الايميل")
                    input(type="password" placeholder="الصفة")
                    input(type="password" placeholder="كلمة السر")
                    button اشترك

            .form-container.sign-in-container
                form(action="#")
                    h1 تسجيل الدخول
                    input(type="email" placeholder="الايميل")
                    input(type="password" placeholder="كلمة السر")
                    a(href="#") هل نسيت كلمة السر؟
                    button سجل
            
            .overlay-container
                .overlay
                .overlay-panel.overlay-left
                    h1 !أهلا بك
                    button.ghost#SignIn سجل دخول
                .overlay-panel.overlay-right
                    h1 !مرحبا بعودتك
                    button.ghost#SignUp الاشتراك
